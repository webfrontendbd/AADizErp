<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             xmlns:vm="clr-namespace:AADizErp.ViewModels.HrVM"             
             x:DataType="vm:AddEmployeeViewModel"
             x:Class="AADizErp.Pages.HRPages.AddUnconfirmEmployeePage"
             Title="Add Unconfirm Employee">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Header Card -->
            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#1f1f1f}"
                    Padding="20">

                <VerticalStackLayout Spacing="5">
                    <Label Text="Add New Employee"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <Label Text="Fill the form to register new employee"
                           TextColor="Gray"
                           FontSize="14"/>
                </VerticalStackLayout>
            </Border>


            <!-- Employee Name -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#dcdcdc, Dark=#444}"
                    BackgroundColor="{AppThemeBinding Light=#fafafa, Dark=#2a2a2a}"
                    StrokeShape="RoundRectangle 16"
                    Padding="10">

                <dxe:TextEdit 
                    Text="{Binding EmployeeDto.EmployeeName, Mode=TwoWay}"
                    PlaceholderText="Employee Name"
                    LabelText="Employee Name"
                    IsLabelFloating="True"
                    AllowAnimation="True"
                    TextFontSize="16"
                    StartIcon="user_solid.png"
                    ClearIconVisibility="Auto"/>
            </Border>


            <!-- Phone -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#dcdcdc, Dark=#444}"
                    BackgroundColor="{AppThemeBinding Light=#fafafa, Dark=#2a2a2a}"
                    StrokeShape="RoundRectangle 16"
                    Padding="10">

                <dxe:TextEdit 
                    Text="{Binding EmployeeDto.Phone, Mode=TwoWay}"
                    Mask="00000000000"
                    PlaceholderText="Mobile Number"
                    Keyboard="Telephone"
                    LabelText="Mobile Number"
                    IsLabelFloating="True"
                    AllowAnimation="True"
                    TextFontSize="16"
                    StartIcon="phone.png"
                    ClearIconVisibility="Auto"/>
            </Border>


            <!-- Gender -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#dcdcdc, Dark=#444}"
                    BackgroundColor="{AppThemeBinding Light=#fafafa, Dark=#2a2a2a}"
                    StrokeShape="RoundRectangle 16"
                    Padding="10">

                <dxe:ComboBoxEdit 
                    ItemsSource="{Binding GenderList}"
                    SelectedItem="{Binding EmployeeDto.Gender, Mode=TwoWay}"
                    PlaceholderText="Select Gender"
                    LabelText="Gender"
                    IsLabelFloating="True"
                    AllowAnimation="True"/>
            </Border>


            <!-- Employee Type -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#dcdcdc, Dark=#444}"
                    BackgroundColor="{AppThemeBinding Light=#fafafa, Dark=#2a2a2a}"
                    StrokeShape="RoundRectangle 16"
                    Padding="10">

                <dxe:TextEdit 
                    Text="{Binding EmployeeDto.EmployeeType, Mode=TwoWay}"
                    PlaceholderText="Employee Type"
                    LabelText="Employee Type"
                    IsLabelFloating="True"
                    AllowAnimation="True"
                    TextFontSize="16"/>
            </Border>


            <!-- Gradient Submit Button -->          

                <dx:DXButton 
                    Content="Submit Employee"
                    Command="{Binding AddEmployeeCommand}"
                    TextColor="White"
                    FontSize="18"
                    Padding="15"
                    CornerRadius="10"
                    WidthRequest="200"
                    HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
